	_rilascio = _this select 1;
	_heliclass = _this select 2;
	_nunita = _this select 3;
	_grp = _this select 4;
	_formation = _this select 5;
	_WP1 = _this select 6;
	_WP2 = _this select 7;
	_WP3 = _this select 8;
	_WP4 = _this select 9;
	_WP5 = _this select 10;
	membri = _this select 11;


;---------------------------------------
; Imposto le classi negli slots delle unità trasportate
;---------------------------------------

;******************************** impostare russi!!!!!!! ********************************************
